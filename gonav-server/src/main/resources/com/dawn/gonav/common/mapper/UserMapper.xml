<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dawn.gonav.common.mapper.UserMapper">
    <insert id="add" parameterType="com.dawn.gonav.model.po.User">
        insert into
            user(
                 username,
                 email,
                 password,
                 role,
                 wechat_openid,
                 linuxdo_openid,
                 create_time,
                 update_time
        ) values(
                 #{username},
                 #{email},
                 #{password},
                 #{role},
                 #{wechatOpenid},
                 #{linuxdoOpenid},
                 #{createTime},
                 #{updateTime}
        )
    </insert>
    <select id="findUserByEmail" resultType="com.dawn.gonav.model.po.User">
        select * from user where email = #{email}
    </select>
    <select id="findUserByUsername" resultType="com.dawn.gonav.model.po.User">
        select * from user where username = #{username}
    </select>
    <select id="findUserByLinuxDoOpenId" resultType="com.dawn.gonav.model.po.User">
        select * from user where linuxdo_openid = #{openId}
    </select>
    <update id="update">
        update user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="nickname != null">
                nickname = #{nickname},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="wechatOpenid != null">
                wechat_openid = #{wechatOpenid},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>